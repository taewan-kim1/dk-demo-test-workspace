			<flow-ref doc:name="Flow-ref to implementation_post-osipi-machinedata" doc:id="de94ca16-85ef-4fed-aa72-6b1ec4ac1565" name="implementation_post-osipi-machinedata"/>
		</munit:execution>
		<munit:validation >
			<munit-tools:assert-equals doc:name="Assert Success Response" doc:id="6756b0e6-834b-4917-95f6-7bd79912caca" actual="#[payload.responseStatus]" expected='#["SUCCESS"]'/>
		</munit:validation>
	</munit:test>
