				<munit-tools:with-attributes >
					<munit-tools:with-attribute whereValue="Get Shop Data From OSI PI" attributeName="doc:name" />
				</munit-tools:with-attributes>
				<munit-tools:then-return >
					<munit-tools:payload value="#[output application/json --- readUrl('classpath://mock-data/mock-osipi-machicedata-response.json')]" />
				</munit-tools:then-return>
			</munit-tools:mock-when>
		</munit:behavior>
		<munit:execution >
			<munit:set-event doc:name="Set Payload" doc:id="710495bc-487f-489a-8adc-84ddc101fbb7">
